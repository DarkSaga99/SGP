<body onload="zoom()">
    <script src="~/Scripts/SGP/Login.js"></script>


    <form id="frmLogin" method="post" action="/Login/FormSubmit">

        <div style="width:100%; height:160px; background-color:#28282A; opacity:0.9;" class="container">
            <div class="row-fluid">
                <div class="span12">
                    <div class="well">
                        <h1 style="font-size: 3.2em; font-family:'MS UI Gothic';padding-top:5%; color:white; text-align:center;">Sistema Control de Proyectos</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="container" align="center">
            <br />
            <br />
            <br />

            <div class="row col-xl-4">
                <div class="col-xs-4 col-sm-6 col-md-8 col-lg-10 col-xl-12">
                    <div class="text-center">
                        <img src="~/Imagenes/logoIQ.png" class="img-fluid img-thumbnail" alt="" />
                    </div>
                </div>
            </div>            
            <br />
            <div class="row col-xl-4">
                <div class="form-group col-xs-4 col-sm-6 col-md-8 col-lg-10 col-xl-12 text-center">
                    <label for="txtUsuario">Usuario</label>
                    <input type="text" class="form-control EnterPress" id="no_usuario" name="no_usuario" placeholder="Ingrese usuario" style="text-align:center;">
                </div>
            </div>
            <div class="row col-xl-4">
                <div class="form-group col-xs-4 col-sm-6 col-md-8 col-lg-10 col-xl-12 text-center">
                    <label for="txtPassword">Password</label>
                    <input type="password" class="form-control EnterPress" id="ps_usuario" name="ps_usuario" placeholder="Password" style="text-align:center;">
                </div>
            </div>
            <br />

            <div class="row col-xl-4">
                <div id="html_element" class="form-group col-xs-4 col-sm-6 col-md-8 col-lg-10 col-xl-12 text-center"></div>
            </div>
            <br />
            <div class="row col-xl-4">
                <div class="col-xs-4 col-sm-6 col-md-8 col-lg-10 col-xl-12">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row col-xl-4">
                <div class="form-group col-xs-4 col-sm-6 col-md-8 col-lg-10 col-xl-12 text-center">
                    <button type="submit" id="btnIngresar" class="btn btn-primary" style="width:100%;">Ingresar</button>
                </div>
            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="ModalAlert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Advertencia</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p id="error"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnOK" class="btn btn-secondary" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>



        <footer class="footer fixed-bottom">
            <p style="color:white; text-align:center;">Copyright © 2019</p>
        </footer>

    </form>

</body>
</html>


<script>

    function zoom() {
        document.body.style.zoom = "72%"
    }

    $(".EnterPress").keypress(function (event) {
        var element = $(this).attr("data-EnterPress");
        var keycode = event.keyCode || event.which;
        if (keycode == 13) {
            $('#' + element).click();
        }
    });
