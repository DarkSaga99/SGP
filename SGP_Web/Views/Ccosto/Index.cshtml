@{
    ViewBag.Title = "Index";
    Layout = Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_LayoutSGP.cshtml";
}

<link href="~/Content/SGP/Cliente.css" rel="stylesheet" />
<script src="~/Scripts/SGP/Ccosto.js"></script>
<script src="~/Scripts/SGP/ValidacionGeneral.js"></script>


<div class="row Fonthead border-bottom bg-dark text-white" style="font-size:x-large;font-weight:bolder;">
    <span>Centro de Costos</span>
</div>
<br />

<div class="row">

    <div class="col-xl-6">
        <div class="form-group ">
            <label for="txtCcosto">Costo</label>
            <input id="txtCcosto" v-model="txtCcosto" type="text" class="form-control EnterPress " maxlength="30" data-EnterPress="btnBuscar" />

        </div>
    </div>

    <div class="col-xl-3 ">
        <div class="form-group ">
            <label for="btnBuscar">&nbsp;</label>
            <button type="button" id="btnBuscar" class="form-control btn btn-primary" data-css="ValidarbtnBuscar">Buscar</button>

        </div>
    </div>

    <div class="col-xl-3">
        <!-- Button trigger modal -->
        <div class="form-group ">
            <label for="btnNuevo">&nbsp;</label>
            <button type="button" id="btnNuevo" class="form-control btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">Nuevo</button>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-xl-12">
        <div id="table_content">
            <div class="table-responsive">
                <table id="tbCcosto" cellspacing="0" style="width:100%" class="table table-hover table-bordered table-dark text-dark">
                    <thead class="text-light">
                        <tr>
                            <th>Código</th>
                            <th>Descripcion</th>
                            <th>stCosto</th>
                            <th>Activo</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header FontheadModal">
                <h5 class="modal-title" id="exampleModalLongTitle"> Centros de Costos </h5>
                <button type="button" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row  no-gutters">
                        <div class="col-xl-12">
                            <div class="form-group ">
                                <label for="txtNombreModal">Ccosto</label>
                                <input id="txtNombreModal" type="text" class="form-control Obligatorio btnGuardarModal " maxlength="30" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group ">
                                <label for="txtDireccionModal">Activo</label>
                                <div>
                                    <label class="radio-inline">
                                        <input type="radio" name="activo" id="rbnActivo" value="S" checked>
                                        Si
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="activo" id="rbnInactivo" value="N">
                                        No
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer FontfooterModal">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCerrarModal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarModal">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="eliminarModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header FontheadModal">
                <h5 class="modal-title" id="exampleModalLongTitle">Mensaje de confirmación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 style="color:red;">¿Desea eliminar esta Ccosto?</h5>
            </div>
            <div class="modal-footer FontfooterModal">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-success" id="btnSiModal">Si</button>
            </div>
        </div>
    </div>
</div>

<input id="hidIdCcosto" type="hidden" />






